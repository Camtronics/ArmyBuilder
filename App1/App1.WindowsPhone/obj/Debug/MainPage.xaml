<Page
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="450"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' x:Name="button" Content="Add Unit" Margin="64,40,0,25" Grid.Row="2" VerticalAlignment="Stretch" Width="171" Background="#FF285314" BorderBrush="#FFE2DEDE" Foreground="#FFE2DEDE"                    />
        <Button x:Name="button_Copy" Content="Delete Unit" Margin="0,40,61,25" Grid.Row="2" VerticalAlignment="Stretch" Width="171" 
                HorizontalAlignment="Right" d:LayoutOverrides="LeftMargin, RightMargin" Foreground="#FFE2DEDE" Background="#FFA40B0B" BorderBrush="#FFE2DEDE"/>
        <Button x:Name="button_Copy1" Content="Save Army" Margin="0,67,61,0" Grid.Row="3" VerticalAlignment="Stretch" 
                HorizontalAlignment="Right" Width="171" d:LayoutOverrides="LeftMargin, RightMargin" Foreground="Black" BorderBrush="#FFE2DEDE" Background="#FFD1C80F"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="26,0,0,10" TextWrapping="Wrap" Text="TextBox" 
                 VerticalAlignment="Bottom" Width="209" Height="64" Grid.Row="3"/>
        <TextBlock x:Name="textBlock" Margin="67,10,247,31" TextWrapping="Wrap" Text="Points Value" FontSize="32" 
                   d:LayoutOverrides="LeftPosition, RightPosition" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="textBlock_Copy" Margin="0,10,41,10" TextWrapping="Wrap" Text="" HorizontalAlignment="Right" Width="191"
                   d:LayoutOverrides="LeftMargin, RightMargin" FontSize="48" VerticalAlignment="Center" Foreground="#FFF01F1F"/>

    </Grid>
</Page>

